{
  "name": "@jsdevtools/host-environment",
  "version": "2.1.2",
  "description": "Easily detect what host environment your code is running in",
  "keywords": [
    "host",
    "environment",
    "browser",
    "version",
    "user agent",
    "universal",
    "isomorphic"
  ],
  "author": {
    "name": "James Messinger",
    "url": "https://jamesmessinger.com"
  },
  "license": "MIT",
  "homepage": "https://jstools.dev/host-environment",
  "repository": {
    "type": "git",
    "url": "https://github.com/JS-DevTools/host-environment.git"
  },
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "esm/index.d.ts",
  "browser": {
    "./cjs/isomorphic.node.js": "./cjs/isomorphic.browser.js",
    "./esm/isomorphic.node.js": "./esm/isomorphic.browser.js"
  },
  "files": [
    "cjs",
    "esm"
  ],
  "scripts": {
    "clean": "shx rm -rf .nyc_output coverage cjs esm",
    "lint": "eslint src test ./*.js",
    "build": "npm run build:cjs && npm run build:esm",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir cjs",
    "test": "npm run test:node && npm run test:browser && npm run lint",
    "test:node": "mocha",
    "test:browser": "karma start --single-run",
    "coverage": "npm run coverage:node && npm run coverage:browser",
    "coverage:node": "nyc node_modules/mocha/bin/mocha",
    "coverage:browser": "npm run test:browser -- --coverage",
    "upgrade": "npm-check -u && npm audit fix",
    "bump": "bump --tag --push --all",
    "release": "npm run upgrade && npm run clean && npm run build && npm test && npm run bump"
  },
  "devDependencies": {
    "@jsdevtools/eslint-config": "^1.0.9",
    "@jsdevtools/karma-config": "^3.1.7",
    "@jsdevtools/version-bump-prompt": "^6.0.6",
    "@types/node": "^14.0.26",
    "chai": "^4.2.0",
    "eslint": "^7.5.0",
    "karma": "^5.1.0",
    "karma-cli": "^2.0.0",
    "mocha": "^8.0.1",
    "npm-check": "^5.9.2",
    "nyc": "^15.1.0",
    "shx": "^0.3.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@qawolf/ci-info": "^2.1.0"
  }
}
